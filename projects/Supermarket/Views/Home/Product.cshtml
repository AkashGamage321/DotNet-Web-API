@model Supermarket.Models.Items

@{
    ViewData["Title"] = "Items";
}

<div class="text-center">
    <h1 class="display-4">What are you looking for?</h1>

    <form asp-action="Product" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" type="text" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Decription"></label>
            <input asp-for="Decription" class="form-control" type="text" placeholder="Decription">
            <span asp-validation-for="Decription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>