@model IEnumerable<Supermarket.Models.Items>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Product List</h1>
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Decription</p>
                        <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                        <a href="@Url.Action("Info", new { id = product.Id })" class="btn btn-primary mt-auto">Info</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
