@model Bookshop.Models.BookInfo

@{
    ViewData["Title"] = "Info";
}

<div class="text-center">
    <form asp-action="Info">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" type="text" placeholder="Title" />

           <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" type="text" placeholder="Description" />

           <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" type="text" placeholder="Price" />

           <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" type="text" placeholder="Author" />

        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
