@model IEnumerable<Todoapp.Models.TaskModel>

@{
    ViewData["Title"] = "Task List";
}

<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header">
            Tasks
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning" role="alert">
                    No tasks available.
                </div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Task Title</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <!-- Add more action buttons here if needed -->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="card-footer text-right">
            <a class="btn btn-success" asp-action="Create">Create New Task</a>
        </div>
    </div>
</div>
